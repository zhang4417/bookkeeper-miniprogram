/* components/tagList/tagList.wxss */

:host {  
  display: contents;
}
.wrapper{
  flex-grow:1;
  margin:8rpx 16rpx;
  display: flex;
  flex-direction: column-reverse;
}
.tags{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.tag-item{
  padding:3rpx 48rpx;
  margin-right:16rpx;
  margin-bottom:16rpx;
  border-radius:32rpx;
  background-color:#eee;
  white-space: nowrap;
}
.btn-wrapper{
  margin:8px 0;
}
.btn-wrapper .btn{
  display: inline-block;
  padding-left:0px !important;
  padding-right:0px !important;
  width:25%;
  margin:0;
  border-bottom:1px solid #ddd;
  border-radius:0 ;
  background:transparent;
  font-size: inherit;
  color:#ccc;
  line-height: inherit;
}
.btn::after{ border: none; } 

.selected{
  background:#f60;
  color:white;
}
